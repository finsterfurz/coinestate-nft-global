# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Environment
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0

# API Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_API_TIMEOUT=30000

# Blockchain Configuration
REACT_APP_CHAIN_ID=1
REACT_APP_NETWORK_NAME=mainnet
REACT_APP_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# Smart Contract Addresses
REACT_APP_NFT_CONTRACT_ADDRESS=0x...
REACT_APP_FOUNDATION_CONTRACT_ADDRESS=0x...

# Feature Flags
REACT_APP_ENABLE_KYC=true
REACT_APP_ENABLE_REAL_TIME_UPDATES=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ANALYTICS=false

# Third-party Services
REACT_APP_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# Legal & Compliance
REACT_APP_TERMS_VERSION=1.0
REACT_APP_PRIVACY_VERSION=1.0
REACT_APP_FOUNDATION_NAME=CoinEstate Foundation
REACT_APP_JURISDICTION=Cayman Islands

# Development Settings
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_DATA=true
REACT_APP_LOG_LEVEL=info

# Security Settings
REACT_APP_ENABLE_CSP=true
REACT_APP_SESSION_TIMEOUT=3600000

# UI Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_SUPPORTED_LANGUAGES=en
REACT_APP_DEFAULT_CURRENCY=EUR

# Performance
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_CACHE_DURATION=86400000
